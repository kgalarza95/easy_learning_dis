<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cursos: " />

        <Spinner
            android:id="@+id/spinner_cursos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título de Asignación: " />

        <EditText
            android:id="@+id/titulo_asignacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título Asignación" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instrucciones: " />

        <EditText
            android:id="@+id/instrucciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Instrucciones de asignación" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de Entrega: " />

        <DatePicker
            android:id="@+id/fecha_vencimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/boton_guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>